<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3DE"
    >
    <TextView
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#E91E1E"
        android:gravity="center"
        android:text="QUẢN LÝ HOÁ ĐƠN"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerQLHoaDon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"></androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:background="#00BCD4"
        android:id="@+id/foatAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_add_24"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>